<Window x:Class="Kontakt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Object List" Height="350" Width="525">
    <Grid>
        <ListBox Name="objectListBox" HorizontalAlignment="Left" Height="250" Margin="10,10,0,0" VerticalAlignment="Top" Width="480"/>
        <Button Content="Add Object" Click="OnAddObjectClicked" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Remove Selected" Click="OnRemoveSelectedClicked" HorizontalAlignment="Left" Margin="120,270,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Save to CSV" Click="OnSaveToCsvClicked" HorizontalAlignment="Left" Margin="250,270,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Load from CSV" Click="OnLoadFromCsvClicked" HorizontalAlignment="Left" Margin="380,270,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>